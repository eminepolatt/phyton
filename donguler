#for
for i in range(5): #range belirli bir sayıdaki kodun tekrarı için kullanılır  // i sıfırdan başlar o değere kadar gider
    print(i)
for i in range(5):
    print("emine")

for a in range(5):
    if a==2:
        continue
    print(a)
    
#while
sayi=5
while sayi>0: # koşul
    print("polat")
    sayi=sayi-1
    


